@model IEnumerable<CompanyEmployeeCrudApp.Models.Employee>

<h2>Employees List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Employee</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Company</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var employee in Model)
    {
        <tr>
            <td>@employee.FirstName</td>
            <td>@employee.LastName</td>
            <td>@employee.Company.Name</td>
            <td>@employee.Email</td>
            <td>@employee.PhoneNumber</td>
            <td>
                <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-secondary">Details</a>
                <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
