@model IEnumerable<CompanyEmployeeCrudApp.Models.Company>

<h2>Companies List</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Company</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Logo</th>
            <th>Website</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var company in Model)
    {
        <tr>
            <td>@company.Name</td>
            <td>@company.Email</td>
            <td><img src="@company.Logo" alt="Company Logo"></td>
            <td>@company.Website</td>
            <td>
                <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-primary">Edit</a>
                <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-secondary">Details</a>
                <a asp-action="Delete" asp-route-id="@company.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
